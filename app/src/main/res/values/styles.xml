<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/startblue</item>
        <item name="colorPrimaryDark">@color/endblue</item>
        <item name="colorAccent">@color/endblue</item>
        <!--<item name="android:buttonStyle">@style/AppTheme.Button</item>-->
    </style>

    <style name="AppTheme.ActionBarStyle" parent="AppTheme">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="AppTheme.ActionBarStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:drawable">@drawable/buttonstyle</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>


</resources>
